generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProviderType {
  EMAIL
  GOOGLE
}

enum TradeSource {
  MANUAL
  BROKER
}

model User {
  id        String          @id @default(uuid())
  email     String          @unique
  name      String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  providers AuthProvider[]
  trades    Trade[]
}

model AuthProvider {
  id             String           @id @default(uuid())
  userId         String
  provider       AuthProviderType
  providerUserId String?
  passwordHash   String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@unique([provider, userId])
}

model Trade {
  id         String      @id @default(uuid())
  userId     String
  symbol     String
  entryPrice Decimal
  exitPrice  Decimal
  quantity   Int
  pnl        Decimal
  tradeDate  DateTime
  goodNotes  String?
  badNotes   String?
  source     TradeSource @default(MANUAL)
  broker     String?
  externalId String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, tradeDate])
}
